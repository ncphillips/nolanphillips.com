---
import { SidebarLayout } from './Sidebar'
import Heading from '../components/typography/Heading';
import Layout from './Layout.astro';
import Menu from '../components/menu.astro';

export interface Props {
	title: string;
  panelTitle?: string
  active?: boolean
}

const { title, panelTitle, active } = Astro.props;
---
<Layout title={title}>
  <SidebarLayout.Header title={title} />
  <SidebarLayout client:idle>
    <SidebarLayout.Sidebar>
      <Heading as='h1' size={4}>Nolan Phillips</Heading>
      <Menu />
    </SidebarLayout.Sidebar>
    <SidebarLayout.Panel title={panelTitle || title} selected={active}>
      <slot name="panel" />
    </SidebarLayout.Panel>
    <SidebarLayout.Pane dots>
      <slot />
    </SidebarLayout.Pane>
  </SidebarLayout>
</Layout>